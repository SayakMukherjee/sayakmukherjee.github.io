```{=html}

<div class="list grid quarto-listing-cols-2" style="column-gap: 1em;">
<% for (const item of items) { %>
    <div class="g-col-1 rounded-3">
        <a class="quarto-grid-link" href="<%- item.href %>">
        <div class="quarto-grid-item card h-100 card-left">
            <p class="card-img-top">
                <img loading="lazy" src="../assets/courses/<%- item.image %>" alt="<%- item.alttext%>" class="thumbnail-image card-img" style="height: 100%;">
            </p>
            <div class="card-body post-contents">
                <h5 class="no-anchor card-title listing-title"><%= item.title%></h5>
                <!-- <p class="card-text"><%= item.text%></p> -->
                <div class="listing-categories">
                <% for (const year of item.years) { %>
                    <div class="listing-category" onclick="return false;">
                        <%= year %>
                    </div>
                <% } %>
                </div>
                <div class="card-attribution card-text-small end">
                    <div class="listing-date"><%= item.location%></div>
                </div>
                <!-- <a  class="btn btn-primary">Course website</a> -->
            </div>
        </div>
        </a>
    </div>
<% } %>
</div>
